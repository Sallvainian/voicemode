{
  "mcpServers": {
    "voicemode": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "voicemode"
      ],
      "env": {
        "VOICEMODE_SAVE_ALL": "true",
        "VOICEMODE_TOOLS_ENABLED": "converse",
        "XVOICEMODE_DEBUG": "trace"
      }
    }
  }
}
