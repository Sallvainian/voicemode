{
  "mcpServers": {
    "livekit-admin-mcp": {
      "type": "stdio",
      "command": "./bin/livekit-admin-mcp",
      "args": [],
      "env": {}
    },
    "voice-mode": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--refresh",
        "."
      ],
      "env": {}
    },
    "tmux": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@nickgnd/tmux-mcp"
      ],
      "env": {}
    },
    "neovim": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-neovim-server"
      ],
      "env": {
        "ALLOW_SHELL_COMMANDS": "true",
        "NVIM_SOCKET_PATH": "/tmp/nvim"
      }
    }
  }
}
